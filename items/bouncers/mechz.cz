template MechBouncer from Bouncer {
    groups = MechZ
    tags + BouncerTPOB
}

template BrokenMechBouncer from MechBouncer {
    hidden + Bouncers
}

template MechScatter from Scatter {
    groups = MechZ
    standalone
}

template Mech(name, id, scatter:name, scatter:id, broken:name, broken:id, ...scatter, ...broken) {
    MechBouncer {
        name = $name
        id = $id
        ...
    }
    MechScatter {
        name = $scatter:name
        id = $(scatter:id || id + 2)
        ...scatter
    } if scatter:name
    BrokenMechBouncer {
        name = $broken:name
        id = $(broken:id || id + 1)
        ...broken
    } if broken:name
}

